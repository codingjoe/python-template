# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{json,yml,yaml,js,jsx}]
indent_size = 2

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.{diff,patch}]
trim_trailing_whitespace = false

[isort]
atomic = true
line_length = 88
known_first_party = {{ cookiecutter.package_name }},tests
combine_as_imports = true
